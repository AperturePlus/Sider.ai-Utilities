# Sider2API Go server example env file
# Copy to .env and adjust values

# Sider auth token
SIDER_API_TOKEN=YOUR_TOKEN_HERE

# Network settings
HOST=0.0.0.0
PORT=4141

# Upstream endpoints (default to official Sider)
SIDER_BASE_URL=https://sider.ai/api/chat/v1/completions
SIDER_CONVERSATION_URL=https://sider.ai/api/chat/v1/conversation/messages

# Auth behavior
ALLOW_DUMMY=true
USE_ENV_TOKEN=true
ENABLE_UI=true

# Logging
LOG_LEVEL=info

# Timeouts and cleanup (Go duration format)
CHAT_TIMEOUT=120s
CONV_TIMEOUT=10s
CLEANUP_INTERVAL=15m
SESSION_MAX_AGE=24h
SIDER_SESSION_MAX_AGE=2h

# Conversation handling
CONTINUOUS_CID=continuous-conversation
